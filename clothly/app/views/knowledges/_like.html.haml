-if user_signed_in?
  - if knowledge.liked_by(current_user)
    = button_to knowledge_like_path(knowledge.id, current_user), method: :delete, class: 'btn btn-default', remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      = knowledge.likes_count
  - else
    = button_to knowledge_likes_path(knowledge.id, current_user), method: :post, class:'btn btn-default', remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      = knowledge.likes_count
- else
  = button_tag class: 'btn btn-default' do
    = image_tag("icon_heart.svg")
    LIKE
    = knowledge.likes_count
